{% style %}
.Bannersito_LimitWrapper{
  max-width: 700px;
  height: 400px;
  margin: auto;
}
.Bannersito_MainContainer{
  display: flex;
  max-width: 700px;
  background-color: #fbfbfb;
  background: linear-gradient(100deg, rgba(251,251,251,1) 0%, rgba(251,251,251,1) 62%, rgba(232,226,210,1) 62%);
  border-radius: 0;
  border: 1px solid white;
  margin: auto;
  padding: 20px;
}
.Bannersito_InfoContainer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  {% if block.settings.product_image != true %}
    width: {{ block.settings.content_width }}%;
  {% else %}
	width: 100%;
  {% endif %}
}
.Bannersito_BigText{
  text-transform: uppercase;
  font-size: 30px;
  line-height: 1.2;
  font-weight: 800;
}
.Bannersito_ButtonWrapper{
  margin-top:10px
}
.Bannersito_Button{
  background-color: #5b1b1b;
  padding: 13px 20px;
  color: white;
  font-weight:bold;
  text-transform: uppercase;
}
.Banersito_ProductImgContainer{
  height: 200px;
  width: max-content;
  margin: auto;
  max-width: calc(100% - {{ block.settings.content_width }}%);
}
.Banersito_ProductImgContainer > img{
  position: relative;
  top: {{ block.settings.custom_top_position }}%;
  {% if block.settings.fit_img_width != true %}
	width: {{ block.settings.custom_img_width }}%;
  {% else %}
	height: inherit;
  {% endif %}
}
.Bannersito_mask-{{ section.id}}{
  {% render 'bannersito-organic-shapes', settings: settings, block: block %}
  mask-size: contain;
  mask-repeat: no-repeat;
  mask-position-x: {{ block.settings.mask_position_x }};
  mask-position-y: {{ block.settings.mask_position_y }};
}
}
{% endstyle %}