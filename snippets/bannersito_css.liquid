{% style %}
.Bannersito_LimitWrapper{
  max-width: 700px;
  height: 400px;
  margin: auto;
}
.Bannersito_MainContainer{
  display: flex;
  max-width: 700px;
  {% if block.settings.background_style == 'plain_color' %}
	background-color: {{ block.settings.plain_bg_color }};
  {% endif %}
  {% if block.settings.background_style == 'two_plain_colors' %}
	background: {{ block.settings.two_plain_colors }};
  {% endif %}
  border-radius: {{ block.settings.container_radius }}px;
  border: {{ block.settings.main_border_thickness }}px solid {{ block.settings.main_border_color }};
  margin: auto;
  padding: 20px;
}
.Bannersito_InfoContainer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  {% if block.settings.product_image != true %}
    width: {{ block.settings.content_width }}%;
  {% else %}
	width: 100%;
  {% endif %}
}
.Bannersito_BigText{
  text-transform: uppercase;
  font-size: 30px;
  line-height: 1.2;
  font-weight: 800;
}
.Bannersito_ButtonWrapper{
  margin-top:10px
}
.Bannersito_Button{
  background-color: {{ block.settings.color_button }};
  padding: 13px 20px;
  color: white;
  font-weight:bold;
  text-transform: uppercase;
  border-radius: {{ block.settings.button_container_radius }};
}
.Banersito_ProductImgContainer{
  height: 200px;
  width: max-content;
  margin: auto;
  max-width: calc(100% - {{ block.settings.content_width }}%);
}
.Banersito_ProductImgContainer > img{
  position: relative;
  top: {{ block.settings.custom_top_position }}%;
  left: {{ block.settings.custom_left_position }}%;
  {% if block.settings.fit_img_width != true %}
	width: {{ block.settings.custom_img_width }}%;
  {% else %}
	height: inherit;
  {% endif %}
}
.Bannersito_mask-{{ section.id}}{
  {% render 'bannersito-organic-shapes', settings: settings, block: block %}
  mask-size: {{ block.settings.mask_size }}%;
  mask-repeat: no-repeat;
  mask-position-x: {{ block.settings.mask_position_x }}vw;
  mask-position-y: {{ block.settings.mask_position_y }}vh;
}
}
{% endstyle %}