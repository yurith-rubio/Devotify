{% style %}
.Bannersito_MainContainer{
  display: flex;
  max-width: 700px;
  background-color: #fbfbfb;
  background: linear-gradient(100deg, rgba(251,251,251,1) 0%, rgba(251,251,251,1) 62%, rgba(232,226,210,1) 62%);
  border-radius: 0;
  border: 1px solid white;
  margin: auto;
  padding: 20px;
}
.Bannersito_InfoContainer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 65%
}
.Bannersito_BigText{
  text-transform: uppercase;
  font-size: 30px;
  line-height: 1.2;
  font-weight: 800;
}
.Bannersito_ButtonWrapper{
  margin-top:10px
}
.Bannersito_Button{
  background-color: #5b1b1b;
  padding: 13px 20px;
  color: white;
  font-weight:bold;
  text-transform: uppercase;
}
.Banersito_ProductImgContainer{
  height: 200px;
  width: max-content;
  margin: auto;
}
.Banersito_ProductImgContainer > img{
  height: inherit;
}
{% endstyle %}