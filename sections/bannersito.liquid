{% render 'bannersito_css' %}

{% style %}
.Bannersito_mask-{{ section.id}}{
  mask: url("{% render 'bannersito-organic-shapes' %}");
  mask-size: contain;
}
{% endstyle %}
{% for block in section.blocks %}
<div class="Bannersito_MainContainer">
	<div class="Bannersito_InfoContainer">
		<div class="Banersito_subText">Get fit</div>
		<div class="Bannersito_BigText">Buy 2 pairs of shoes and get 1 for free</div>
      	<div class="Bannersito_ButtonWrapper"><a class="Bannersito_Button" href="https://damnhandsomegroomingco.com/">Buy Now</a></div>
	</div>
	<div class="Banersito_ProductImgContainer Bannersito_mask-{{ section.id}}"
                {% if block.settings.mask != 'select' %}{% render 'bannersito-organic-shapes' | block:block %}{% endif %}>
		<img src="{{ block.settings.promo_image | img_url: 'master' }}">
	</div>
</div>
{% endfor %}


{% schema %}
  {
    "name": "Bannersito",
    "settings": [],
	"blocks": [
	  {
		"type": "image",
		"name": "Promo Image",
		"settings": [
		  {
			"type": "image_picker",
			"id": "promo_image",
			"label": "Promo Image"
		  },
		  {
			"type": "select",
			"id": "mask",
			"label": "Image's mask",
			"options": [
			  {
				"value": "select",
				"label": "Select your mask"
			  },
			  {
				"value": "bubble1",
				"label": "Bubble1"
			  }
			],
			"default": "select"
		  }
		]
	  }
	],
	"presets": [
	  {
		"name": "Banersito"
	  }
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

